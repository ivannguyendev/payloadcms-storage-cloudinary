{
  "name": "@ivanistao/payloadcms-storage-cloudinary",
  "version": "1.0.0",
  "description": "Payload storage adapter for cloudinary",
  "repository": {
    "type": "git",
    "url": "https://github.com/ivanistao/payloadcms-storage-cloudinary.git",
  },
  "license": "MIT",
  "author": "https://github.com/ivanistao",
  "type": "module",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    }
  },
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm build:types && pnpm build:swc",
    "build:clean": "find . \\( -type d \\( -name build -o -name dist -o -name .cache \\) -o -type f -name tsconfig.tsbuildinfo \\) -exec rm -rf {} + && pnpm build",
    "build:swc": "swc ./src -d ./dist --config-file .swcrc --strip-leading-paths",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "clean": "rimraf -g {dist,*.tsbuildinfo}",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "pnpm clean && pnpm turbo build"
  },
  "dependencies": {
    "@payloadcms/plugin-cloud-storage": "^3.24.0",
    "cloudinary": "^2.5.1",
    "payload": "^3.24.0",
    "payload-cloudinary-plugin": "^0.1.14"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0"
  },
  "publishConfig": {
    "exports": {
      ".": {
        "import": "./dist/index.js",
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts"
  },
  "devDependencies": {
    "typescript": "^5.7.3"
  }
}
